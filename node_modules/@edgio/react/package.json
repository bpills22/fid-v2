{
  "name": "@edgio/react",
  "version": "7.13.13",
  "license": "Apache-2.0",
  "dependencies": {
    "@edgio/devtools": "^7.13.13",
    "@edgio/prefetch": "^7.13.13",
    "prop-types": "^15.8.1",
    "react-merge-refs": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.6.4",
    "@types/react": "16.9.56",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "scripts": {
    "docs": "typedoc",
    "build": "rm -rf ./dist; mkdir ./dist; tsc; cp -r package.json README.md stage/react/src/* dist",
    "watch": "npm-watch",
    "push-build": "npm run build && cd dist && yalc push && cd ..",
    "release": "cd ./dist; npm publish --access public",
    "test": "jest"
  },
  "watch": {
    "push-build": {
      "patterns": [
        "src",
        "package.json"
      ],
      "extensions": "*",
      "quiet": false
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "clearMocks": true,
    "collectCoverage": true,
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts}",
      "!**/mocks/**",
      "!**/index.ts"
    ],
    "moduleNameMapper": {
      "^@edgio/core(.*)$": "<rootDir>/../core/src/$1",
      "^@edgio/prefetch(.*)$": "<rootDir>/../prefetch/src/$1",
      "^@edgio/devtools(.*)$": "<rootDir>/../devtools/src/$1"
    },
    "setupFiles": [
      "./test/config/setup.js"
    ]
  },
  "publishConfig": {
    "directory": "dist"
  }
}
